<body>
  <aside id="sidebar">
    <h2>Mini Roblox -- The Ultimate Hub</h2>
    <p style="font-size:14px;opacity:0.8;">
      About Mini Roblox: This is a mini Roblox because David Baszucki is bad.
    </p>
    <label>Enter your name:</label>
    <input id="playerName" placeholder="Type name..." />
    <button onclick="loadGame('garden')">ðŸŒ± Grow a Garden</button>
    <button onclick="loadGame('brainrot')">ðŸ§  Steal a Brainrot</button>
  </aside>
  <main id="main">
    <div id="topMoney" style="display:none">Money: $0</div>
    <canvas id="gameCanvas"></canvas>
    <div id="overlay"></div>
    <div id="toolbar"></div>
    <div id="hudRight"></div>
  </main>
<script>
let currentGame="",money=0,ctx,canvas=document.getElementById("gameCanvas");
canvas.width=window.innerWidth-320;canvas.height=window.innerHeight;
ctx=canvas.getContext("2d");
const moneyDiv=document.getElementById("topMoney");
function updateMoney(){moneyDiv.innerText="Money: $"+money;}

function loadGame(game){
  currentGame=game;money=0;moneyDiv.style.display="block";updateMoney();
  ctx.clearRect(0,0,canvas.width,canvas.height);
  document.getElementById("overlay").innerHTML=`<h3>${game==="garden"?"Grow a Garden":"Steal a Brainrot"}</h3>
    <button onclick="leaveGame()">Leave</button>`;
  if(game==="garden") initGarden();
  if(game==="brainrot") initBrainrot();
}

function leaveGame(){
  currentGame="";money=0;moneyDiv.style.display="none";
  ctx.clearRect(0,0,canvas.width,canvas.height);
  document.getElementById("overlay").innerHTML="";
  document.getElementById("toolbar").innerHTML="";
  document.getElementById("hudRight").innerHTML="";
}

// --- Grow a Garden ---
let plots=[];
function initGarden(){
  plots=[];
  for(let i=0;i<6;i++){plots.push({x:100+i*120,y:200,plant:null});}
  drawGarden();
}
function drawGarden(){
  ctx.clearRect(0,0,canvas.width,canvas.height);
  plots.forEach(p=>{
    ctx.strokeStyle="white";ctx.strokeRect(p.x,p.y,100,100);
    if(p.plant){ctx.fillText("ðŸ¥•",p.x+40,p.y+55);}
  });
}
canvas.addEventListener("click",e=>{
  if(currentGame==="garden"){
    plots.forEach(p=>{
      if(e.offsetX>p.x&&e.offsetX<p.x+100&&e.offsetY>p.y&&e.offsetY<p.y+100){
        if(!p.plant){p.plant="carrot";}else{p.plant=null;money+=10;updateMoney();}
        drawGarden();
      }
    });
  }
});

// --- Steal a Brainrot ---
let bases=[],brainrots=[];
function initBrainrot(){
  bases=[
    {name:"My Base",x:200,y:300,isPlayer:true},
    {name:"Bot1 Base",x:700,y:100},
    {name:"Bot2 Base",x:1000,y:400},
    {name:"Bot3 Base",x:1400,y:200}
  ];
  brainrots=[];
  document.getElementById("toolbar").innerHTML=`<button onclick="spawnBrainrot()">Spawn Brainrot</button>`;
  drawBrainrot();
}
function drawBrainrot(){
  ctx.clearRect(0,0,canvas.width,canvas.height);
  bases.forEach(b=>{
    ctx.strokeStyle=b.isPlayer?"yellow":"red";
    ctx.strokeRect(b.x,b.y,120,120);
    ctx.fillText(b.name,b.x,b.y-5);
  });
  brainrots.forEach(br=>{
    ctx.fillText("ðŸ§ ",br.x,br.y);
    ctx.fillText("Sell",br.x,br.y+20);
  });
}
function spawnBrainrot(){
  let base=bases.find(b=>b.isPlayer);
  let x=base.x+30+Math.random()*60,y=base.y+30+Math.random()*60;
  brainrots.push({x,y});
  drawBrainrot();
}
canvas.addEventListener("click",e=>{
  if(currentGame==="brainrot"){
    brainrots.forEach((br,i)=>{
      if(e.offsetX>br.x-10&&e.offsetX<br.x+40&&e.offsetY>br.y-10&&e.offsetY<br.y+40){
        brainrots.splice(i,1);money+=20;updateMoney();
        drawBrainrot();
      }
    });
  }
});
</script>
